<!DOCTYPE html>
<html lang="{{@site.locale}}">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>{{meta_title}}</title>
    <link rel="stylesheet" href="{{asset "built/screen.css"}}">
    <link rel="stylesheet" href="{{asset "built/custom.css"}}">

    {{ghost_head}}
</head>

<body class="{{body_class}} is-head-b--a_n">
    <div class="gh-site">
        <header id="gh-head" class="gh-head gh-outer">
            <div class="gh-head-inner gh-inner">
                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                        <a class="gh-head-logo" href="{{@site.url}}">
                            {{#if @site.logo}}
                                <img src="{{@site.logo}}" alt="{{@site.title}}">
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a>
                    </div>
                    <button class="gh-burger"></button>
                </div>

                <nav class="gh-head-menu">
                    {{navigation}}
                </nav>

                <div class="gh-head-actions">
                    <a class="gh-head-btn" href="https://yourholderpass.xyz/pass/rRINR78ZI3eqmJwdkygU" target="_blank">Member Area</a>
                </div>
            </div>
        </header>

        {{{body}}}

        <div class="community">
            <div class="gh-outer">
                <section>
                    <h2 class="gh-card-title">Join our Community</h2>
                    <ul>
                        <li>
                            <a href="https://twitter.com/eatworksnyc" target="_blank">
                                Twitter
                                <span class="gh-navigation-label">{{> icons/arrow-right}}</span>
                            </a>
                        </li>
                        <li>
                            <a href="https://discord.gg/2kShKXrgUJ" target="_blank">
                                Discord
                                <span class="gh-navigation-label">{{> icons/arrow-right}}</span>
                            </a>
                        </li>
                        <li>
                            <a href="https://yourholderpass.xyz/pass/rRINR78ZI3eqmJwdkygU" target="_blank">
                                Member Area
                                <span class="gh-navigation-label">{{> icons/arrow-right}}</span>
                            </a>
                        </li>
                         <li>
                            <a href="mailto:happenings@eatworks.xyz?subject=Membership" target="_blank">
                                Request Membership
                                <span class="gh-navigation-label">{{> icons/arrow-right}}</span>
                            </a>
                        </li>
                    </ul>

                </section>
            </div>
        </div>
        
        <footer class="gh-foot gh-outer">
            <div class="gh-foot-inner gh-inner">

                <div class="gh-head-brand">
                    <div class="gh-head-brand-wrapper">
                        <a class="gh-head-logo" href="{{@site.url}}">
                            {{#if @site.logo}}
                                <img src="{{@site.logo}}" alt="{{@site.title}}">
                            {{else}}
                                {{@site.title}}
                            {{/if}}
                        </a>
                    </div>
                </div>

                <div class="gh-copyright">
                    {{@site.title}} Â© {{date format="YYYY"}}
                </div>
            </div>
        </footer>
    </div>

    {{#is "post, page"}}
        {{> "pswp"}}
    {{/is}}

    <script src="{{asset "built/main.min.js"}}"></script>

    {{ghost_foot}}
</body>

</html>